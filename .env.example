# Storage Configuration
# Options: local, s3, gcs
STORAGE_TYPE=local

# Local Storage Settings
OUTPUT_DIR=data/raw

# Common Cloud Storage Settings
BUCKET_NAME=
PARTITION_BY_DATE=true
COMPRESSION=gzip
ENABLE_FALLBACK=true

# AWS S3 Configuration (when STORAGE_TYPE=s3)
AWS_CREDENTIALS_FILE=aws_credentials.json
# Or set credentials directly:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# Google Cloud Storage Configuration (when STORAGE_TYPE=gcs)
GCS_CREDENTIALS_FILE=gcp_credentials.json
# Or set via environment:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
